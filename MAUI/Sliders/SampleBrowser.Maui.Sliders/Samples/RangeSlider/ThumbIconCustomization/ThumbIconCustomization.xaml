<?xml version="1.0" encoding="utf-8" ?>
<sb:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:sb="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
               xmlns:sliders="clr-namespace:Syncfusion.Maui.Sliders;assembly=Syncfusion.Maui.Sliders"
               x:Class="SampleBrowser.Maui.Sliders.SfRangeSlider.RangeSliderThumbIconCustomizationSample">

    <sb:SampleView.Content>
        <ScrollView>
            <Grid RowDefinitions="Auto,Auto,25,Auto,Auto"
                  WidthRequest="350"
                  VerticalOptions="Center">

                <Label Grid.Row="0"
                       Grid.Column="1"
                       Text="Text view"
                       Margin="24,0,0,0" />

                <sliders:SfRangeSlider x:Name="slider"
                                       Grid.Row="1"
                                       Grid.ColumnSpan="3"
                                       Minimum="0"
                                       Maximum="10"
                                       RangeStart="4"
                                       RangeEnd="6"
                                       StepSize="1">

                    <sliders:SfRangeSlider.ThumbStyle>
                        <sliders:SliderThumbStyle Radius="14" />
                    </sliders:SfRangeSlider.ThumbStyle>

                    <sliders:SfRangeSlider.StartThumbIcon>
                        <VerticalStackLayout>
                            <HorizontalStackLayout>
                                <Label Text="{Binding Source={x:Reference slider}, Path=RangeStart}"
                                       TextColor="White" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </sliders:SfRangeSlider.StartThumbIcon>

                    <sliders:SfRangeSlider.EndThumbIcon>
                        <VerticalStackLayout>
                            <HorizontalStackLayout>
                                <Label Text="{Binding Source={x:Reference slider}, Path=RangeEnd}"
                                       TextColor="White" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </sliders:SfRangeSlider.EndThumbIcon>
                </sliders:SfRangeSlider>

                <Label Grid.Row="3"
                       Grid.Column="1"
                       Text="Icon view"
                       Margin="24,0,0,0" />

                <sliders:SfRangeSlider Grid.Row="4"
                                       Grid.ColumnSpan="3"
                                       Minimum="0"
                                       Maximum="10"
                                       RangeStart="4"
                                       RangeEnd="6">

                    <sliders:SfRangeSlider.ThumbStyle>
                        <sliders:SliderThumbStyle Radius="14" />
                    </sliders:SfRangeSlider.ThumbStyle>

                    <sliders:SfRangeSlider.StartThumbIcon>
                        <VerticalStackLayout>
                            <HorizontalStackLayout>
                                <Label Text="&#xe700;"
                                       FontAttributes="Bold"
                                       TextColor="White">
                                    <Label.FontFamily>
                                        <OnPlatform x:TypeArguments="x:String">
                                            <On Platform="iOS,MacCatalyst"
                                                Value="metro" />
                                            <On Platform="UWP"
                                                Value="Sliders-Icons.ttf#metro" />
                                            <On Platform="Android"
                                                Value="Sliders-Icons.ttf#metro" />
                                        </OnPlatform>
                                    </Label.FontFamily>
                                </Label>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </sliders:SfRangeSlider.StartThumbIcon>

                    <sliders:SfRangeSlider.EndThumbIcon>
                        <VerticalStackLayout>
                            <HorizontalStackLayout>
                                <Label Text="&#xe701;"
                                       FontAttributes="Bold"
                                       TextColor="White">
                                    <Label.FontFamily>
                                        <OnPlatform x:TypeArguments="x:String">
                                            <On Platform="iOS,MacCatalyst"
                                                Value="metro" />
                                            <On Platform="UWP"
                                                Value="Sliders-Icons.ttf#metro" />
                                            <On Platform="Android"
                                                Value="Sliders-Icons.ttf#metro" />
                                        </OnPlatform>
                                    </Label.FontFamily>
                                </Label>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </sliders:SfRangeSlider.EndThumbIcon>
                </sliders:SfRangeSlider>
            </Grid>
        </ScrollView>
    </sb:SampleView.Content>
</sb:SampleView>