<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.Maui.PdfViewer.SfPdfViewer.ShapeListView"
             xmlns:sf="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
             xmlns:local ="clr-namespace:SampleBrowser.Maui.PdfViewer.SfPdfViewer">

    <Border 
        x:Name="Colors" 
        VerticalOptions="Start" 
        HorizontalOptions="Start"
        WidthRequest="200" 
        HeightRequest="210"
        Padding="0,7,0,7"
        BackgroundColor="#EEE8F4"
        IsVisible="{OnPlatform Default=true,Android=false,iOS=false}">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="5" />
        </Border.StrokeShape>
        <Border.Shadow>
            <Shadow Brush="#000000"
                Offset="1,3"
                Radius="5"
                Opacity="0.30"/>
        </Border.Shadow>
        <sf:SfListView 
        x:Name="listView" ItemTapped="SfListView_ItemTapped">
            <sf:SfListView.ItemTemplate>
                <DataTemplate>
                    <Border>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="0" />
                    </Border.StrokeShape>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                        <HorizontalStackLayout>
                            <Label
                             Padding="20,0,0,0"
                                TextColor="#99000000"
                            FontSize="16"
                            FontFamily="Maui Material Assets"
                            VerticalOptions="Center"
                            Text="{Binding Icon}">
                            </Label>
                            <Label
                                Padding="15,0,0,0"
                                TextColor="#99000000"
                                FontSize="16" 
                                VerticalOptions="Center"
                                Text="{Binding IconName}">
                            </Label>
                        </HorizontalStackLayout>
                        </Grid>
                    </Border>
                </DataTemplate>
            </sf:SfListView.ItemTemplate>
        </sf:SfListView>
    </Border>
</ContentView>
