<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.Maui.PdfViewer.SfPdfViewer.StampDialog"
             xmlns:local="clr-namespace:SampleBrowser.Maui.PdfViewer.SfPdfViewer"
             BackgroundColor="#40000000">
    <ContentView.Resources>
        <Style x:Key="buttonIconStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="Opacity" Value="0.6"/>
            <Setter Property="Padding" Value="4" />
            <Setter Property="BorderWidth" Value="0" />
            <Setter Property="FontFamily" Value="{OnPlatform iOS=PdfViewerIcon, MacCatalyst=PdfViewerIcon, Android=PdfViewerIcon.ttf#, WinUI=PdfViewerIcon.ttf#PdfViewerIcon}"/>
            <Style.Triggers>
                <Trigger Property = "IsPressed" Value = "True" TargetType="Button">
                    <Setter Property="BackgroundColor" Value="#14000000" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </ContentView.Resources>
    <Border 
        BackgroundColor="#EEE8F4"
        Stroke="#33000000" StrokeShape="{OnPlatform WinUI=RoundRectangle 20, MacCatalyst=RoundRectangle 20}"
        StrokeThickness="1" HorizontalOptions="Center" 
        VerticalOptions="Center" HeightRequest="{OnPlatform WinUI=420,MacCatalyst=420}" WidthRequest="{OnPlatform WinUI=340,MacCatalyst=340}" >
        <Grid BackgroundColor="#EEE8F4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" BackgroundColor="#EEE8F4"  Margin="20,20,20,15" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label  Grid.Column="0" Text="Create Stamp" HeightRequest="32"
                       TextColor="#1C1B1F" HorizontalOptions="Start" FontSize="20" />
                <Button Grid.Column="1" Text="&#xe70b;" TextColor="#49454F" FontSize="24" 
                        FontFamily="Maui Material Assets" Padding="4"
                        Style="{StaticResource buttonIconStyle}" HorizontalOptions="End"
                        Clicked="OnCloseClicked" />
            </Grid>
            
            <Border Grid.Row="1" WidthRequest="300" HeightRequest="134"
                    Stroke="#CAC4D0"
                    StrokeShape="{OnPlatform WinUI=RoundRectangle 4,MacCatalyst=RoundRectangle 4}" 
                    StrokeThickness="1">
                <StackLayout x:Name="layout" HorizontalOptions="Center" VerticalOptions="Center"   >
                    <Border Stroke="#A007A3" BackgroundColor="#FADFFB" HeightRequest="50" WidthRequest="80" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                            x:Name="border"  StrokeThickness="1" 
                             StrokeShape="{OnPlatform WinUI=RoundRectangle 0, MacCatalyst=RoundRectangle 0}">
                        <Label x:Name="label" Text="Text"  CharacterSpacing="0.1" FontSize="20" 
                               TextColor="#A007A3" HorizontalTextAlignment="Center" HorizontalOptions="Fill" 
                               VerticalOptions="Fill" VerticalTextAlignment="Center" FontAttributes="Bold" />
                    </Border>
                </StackLayout>
            </Border>

            <local:CustomEntry Grid.Row="3" Background="Transparent" x:Name="createEntry" Margin="0,6,0,0" WidthRequest="300" HeightRequest="38" 
                   Text="Text" VerticalTextAlignment="Center" ClearButtonVisibility="Never" MaxLength="24" TextChanged="OnEntryTextChanged" />

            <Grid x:Name="stampColor" Grid.Row="4" Margin="12" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Margin="2" Grid.Column="0" BorderWidth="1" BorderColor="Transparent" Padding="1" HeightRequest="35" WidthRequest="35" CornerRadius="20" BackgroundColor="#C10000" Clicked="ColorHighlightButton_Clicked"/>
                <Button Grid.Row="0" Margin="2" Grid.Column="1" BorderWidth="1" BorderColor="Transparent" Padding="1" HeightRequest="35" WidthRequest="35" CornerRadius="20" BackgroundColor="#089405" Clicked="ColorHighlightButton_Clicked"/>
                <Button Grid.Row="0" Margin="2" Grid.Column="2" BorderWidth="1" BorderColor="Transparent" Padding="1" HeightRequest="35" WidthRequest="35" CornerRadius="20" BackgroundColor="#A29C06" Clicked="ColorHighlightButton_Clicked"/>
                <Button Grid.Row="0" Margin="2" Grid.Column="3" BorderWidth="1" BorderColor="Transparent" Padding="1" HeightRequest="35" WidthRequest="35" CornerRadius="20" BackgroundColor="#A007A3" Clicked="ColorHighlightButton_Clicked"/>
                <Button Grid.Row="0" Margin="2" Grid.Column="4" BorderWidth="1" BorderColor="Transparent" Padding="1" HeightRequest="35" WidthRequest="35" CornerRadius="20" BackgroundColor="#07549A" Clicked="ColorHighlightButton_Clicked"/>
                <Button Grid.Row="0" Margin="2" Grid.Column="5" BorderWidth="1" BorderColor="Transparent" Padding="1" HeightRequest="35" WidthRequest="35" CornerRadius="20" BackgroundColor="#2E01B0" Clicked="ColorHighlightButton_Clicked"/>
                <Button Grid.Row="0" Margin="2" Grid.Column="6" BorderWidth="1" BorderColor="Transparent" Padding="1" HeightRequest="35" WidthRequest="35" CornerRadius="20" BackgroundColor="#986504" Clicked="ColorHighlightButton_Clicked"/>

                <Button Grid.Row="1" Margin="2" Grid.Column="0" BorderWidth="1" BorderColor="Transparent" Padding="1" HeightRequest="35" WidthRequest="35" CornerRadius="20" BackgroundColor="#15686A" Clicked="ColorHighlightButton_Clicked"/>
                <Button Grid.Row="1" Margin="2" Grid.Column="1" BorderWidth="1" BorderColor="Transparent" Padding="1" HeightRequest="35" WidthRequest="35" CornerRadius="20" BackgroundColor="#3D3D3D" Clicked="ColorHighlightButton_Clicked"/>
                <Button Grid.Row="1" Margin="2" Grid.Column="2" BorderWidth="1" BorderColor="Transparent" Padding="1" HeightRequest="35" WidthRequest="35" CornerRadius="20" BackgroundColor="#6C0B6E" Clicked="ColorHighlightButton_Clicked"/>
                <Button Grid.Row="1" Margin="2" Grid.Column="3" BorderWidth="1" BorderColor="Transparent" Padding="1" HeightRequest="35" WidthRequest="35" CornerRadius="20" BackgroundColor="#800404" Clicked="ColorHighlightButton_Clicked"/>
                <Button Grid.Row="1" Margin="2" Grid.Column="4" BorderWidth="1" BorderColor="Transparent" Padding="1" HeightRequest="35" WidthRequest="35" CornerRadius="20" BackgroundColor="#546B08" Clicked="ColorHighlightButton_Clicked"/>
                <Button Grid.Row="1" Margin="2" Grid.Column="5" BorderWidth="1" BorderColor="Transparent" Padding="1" HeightRequest="35" WidthRequest="35" CornerRadius="20" BackgroundColor="#613E09" Clicked="ColorHighlightButton_Clicked"/>
                <Button Grid.Row="1" Margin="2" Grid.Column="6" BorderWidth="1" BorderColor="Transparent" Padding="1" HeightRequest="35" WidthRequest="35" CornerRadius="20" BackgroundColor="#33076C" Clicked="ColorHighlightButton_Clicked"/>
            </Grid>

            <Grid Grid.Row="5" Margin="0,120,30,15" >
                <Button  Text="Create" TextColor="#6750A4" FontSize="14" FontFamily="Roboto" Opacity="4"
                     Style="{StaticResource buttonIconStyle}" HorizontalOptions="End" VerticalOptions="End"
                     Padding="4" CornerRadius="4"
                     Clicked="OnApplyClicked"/>
            </Grid>
        </Grid>
    </Border>
</ContentView>
